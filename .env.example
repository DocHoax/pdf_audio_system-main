# EchoDoc Environment Configuration
# Copy this file to .env and fill in your values

# App Environment (local or production)
APP_ENV=local
APP_URL=http://localhost/pdf_audio_system-main

# Database Configuration
DB_HOST=localhost
DB_NAME=echodoc_db
DB_USER=root
DB_PASS=
DB_PORT=3306

# YarnGPT API
YARNGPT_API_KEY=your_yarngpt_api_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost/pdf_audio_system-main/google-callback.php

# Email Configuration (optional - uses PHP mail() if not set)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=tls
MAIL_FROM_EMAIL=noreply@echodoc.app
MAIL_FROM_NAME=EchoDoc
ADMIN_EMAIL=admin@echodoc.app
